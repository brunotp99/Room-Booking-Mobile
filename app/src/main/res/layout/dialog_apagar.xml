<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/border_radius">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/warning_sign"/>

    <TextView
        android:id="@+id/txtRemover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remover Reserva"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="24sp"
        android:textColor="@color/smooth_black"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtCerteza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/smooth_black"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Tem a certeza que deseja remover a sua reserva?" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingTop="20dp">

        <Button
            android:id="@+id/dialogVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:background="@drawable/modern_button"
            android:fontFamily="@font/poppins"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Voltar"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:backgroundTint="@color/smooth_black" />

        <Button
            android:id="@+id/dialogAceitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@drawable/modern_button"
            android:fontFamily="@font/poppins"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:backgroundTint="@color/azul_800" />

    </RelativeLayout>

</LinearLayout>