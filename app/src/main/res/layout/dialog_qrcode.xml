<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/border_radius">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/warning"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informação"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="24sp"
        android:textColor="@color/smooth_black"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Desculpe, a sala selecionada já não se encontra disponível para reservas." />

        <Button
            android:id="@+id/dialogAceitar"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:background="@drawable/modern_button"
            app:backgroundTint="@color/azul_800"
            android:text="Ok" />


</LinearLayout>